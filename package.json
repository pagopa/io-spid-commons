  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "shx rm -rf dist",
    "build": "tsc",
    "dev": "nodemon --inspect=0.0.0.0 dist/example.js",
    "postversion": "git push && git push --tags",
    "test": "jest -i",
    "lint": "tslint --project .",
    "preversion": "auto-changelog  --config .auto-changelog.json --unreleased --commit-limit false --stdout --template preview.hbs",
    "version": "auto-changelog -p --config .auto-changelog.json --unreleased && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@types/express": "4.17.0",
    "@types/jest": "^24.0.13",
    "@types/node": "10.14.1",
    "@types/node-fetch": "^2.1.2",
    "@types/node-forge": "^0.9.1",
    "@types/passport": "^1.0.2",
    "@types/passport-saml": "1.1.1",
    "@types/request-ip": "0.0.35",
    "@types/supertest": "^2.0.8",
    "@types/xml-crypto": "^1.4.1",
    "@types/xml2js": "^0.4.5",
    "@types/xmldom": "^0.1.29",
    "@types/yargs": "^15.0.4",
    "auto-changelog": "^2.2.1",
    "danger": "^7.0.0",
    "danger-plugin-digitalcitizenship": "*",
    "express": "4.17.0",
    "italia-tslint-rules": "*",
    "jest": "^24.8.0",
    "mock-redis-client": "^0.91.13",
    "nock": "^11.7.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.12.1",
    "shx": "^0.3.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.1.0",
    "typescript": "^3.7.0"
  },
  "dependencies": {
    "@types/redis": "^2.8.14",
    "date-fns": "^1.30.1",
    "fp-ts": "1.17.0",
    "io-ts": "1.8.5",
    "io-ts-types": "^0.4.7",
    "italia-ts-commons": "^5.1.4",
    "node-fetch": "^2.2.0",
    "node-forge": "^0.9.1",
    "passport": "^0.4.1",
    "passport-saml": "1.2.0",
    "redis": "^2.8.0",
    "winston": "^3.0.0",
    "xml-crypto": "^1.4.0",
    "xml2js": "^0.4.23",
    "xmldom": "^0.1.27",
    "yargs": "^15.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "js",
      "node",
      "ts"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "resolutions": {
    "fp-ts": "1.17.0"
  },
  "bugs": {
    "url": "https://github.com/pagopa/io-spid-commons/issues"
  },
  "homepage": "https://github.com/pagopa/io-spid-commons#readme",
  "keywords": [
    "spid"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  }
