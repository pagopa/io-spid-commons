{
  "name": "@pagopa/io-spid-commons",
  "version": "5.0.0",
  "description": "Common code for integrating SPID authentication",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagopa/io-spid-commons.git"
  },
  "bin": {
